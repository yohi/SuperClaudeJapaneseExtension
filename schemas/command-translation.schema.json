{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://superclaude.org/schemas/command-translation.schema.json",
  "title": "Command Translation Schema",
  "description": "SuperClaude コマンド翻訳データのスキーマ定義",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "翻訳データのバージョン（セマンティックバージョニング）"
    },
    "commands": {
      "type": "object",
      "description": "コマンド翻訳の定義",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "minLength": 1,
              "maxLength": 500,
              "description": "コマンドの説明"
            },
            "category": {
              "type": "string",
              "enum": [
                "開発",
                "分析",
                "テスト",
                "デプロイ",
                "管理",
                "その他"
              ],
              "description": "コマンドのカテゴリー"
            },
            "arguments": {
              "type": "object",
              "description": "引数の翻訳",
              "additionalProperties": {
                "type": "string",
                "minLength": 1,
                "maxLength": 200
              }
            }
          },
          "required": [
            "description"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "version",
    "commands"
  ],
  "additionalProperties": false
}
