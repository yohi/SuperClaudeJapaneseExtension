{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://superclaude.org/schemas/error-translation.schema.json",
  "title": "Error Translation Schema",
  "description": "SuperClaude エラーメッセージ翻訳データのスキーマ定義",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "翻訳データのバージョン（セマンティックバージョニング）"
    },
    "errors": {
      "type": "object",
      "description": "エラーメッセージ翻訳の定義",
      "patternProperties": {
        "^[A-Z_][A-Z0-9_]*$": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "エラーメッセージの翻訳"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "version",
    "errors"
  ],
  "additionalProperties": false
}
