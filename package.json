{
  "name": "@superclaude/japanese-extension",
  "version": "1.0.0",
  "description": "SuperClaude Framework の日本語化とコマンドオプション機能強化",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "translations",
    "completions",
    "schemas"
  ],
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:clean": "rm -rf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "superclaude",
    "i18n",
    "japanese",
    "cli",
    "completion",
    "typescript"
  ],
  "author": "SuperClaude Japanese Extension Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SuperClaude-Org/SuperClaudeJapaneseExtension.git"
  },
  "bugs": {
    "url": "https://github.com/SuperClaude-Org/SuperClaudeJapaneseExtension/issues"
  },
  "homepage": "https://github.com/SuperClaude-Org/SuperClaudeJapaneseExtension#readme",
  "dependencies": {
    "i18next": "^23.15.0",
    "i18next-fs-backend": "^2.3.2",
    "yaml": "^2.4.0",
    "chalk": "^5.3.0",
    "fast-levenshtein": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
